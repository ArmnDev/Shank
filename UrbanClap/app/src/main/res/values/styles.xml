<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

    </style>


    <!-- Application theme. -->
    <style name="AppThemeHome" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#E74C3C</item>
        <item name="colorControlHighlight">#E74C3C</item>
    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#E74C3C</item>
        <item name="colorControlHighlight">#E74C3C</item>
    </style>
    <style name="DividerViewPager">
        <item name="android:width">@dimen/width_line_divider</item>
        <item name="android:height">48dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">#000000</item>
    </style>
    <style name="Widget.Styled.ActionBar" parent="@style/AppTheme">
        <item name="android:backgroundSplit">@color/theme_color</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarDivider">@color/theme_color</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#3560A4</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#2c3e50</item>
        <item name="android:textColorPrimary">#1D1D1D</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#E74C3C</item>
        <item name="colorControlHighlight">#E74C3C</item>
    </style>

    <style name="Transparent.Actionbar" parent="Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#E74C3C</item>
        <item name="colorControlHighlight">#E74C3C</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel" parent="TextAppearance.AppCompat">

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#1d1d1d</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#1d1d1d</item>
        <item name="colorControlNormal">#1d1d1d</item>
        <item name="colorControlActivated">#1d1d1d</item>
    </style>

</resources>