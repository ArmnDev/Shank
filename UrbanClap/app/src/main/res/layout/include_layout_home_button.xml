<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/profileLayout"
    android:layout_height="match_parent"
    android:layout_below="@id/topLayout"
    android:layout_above="@id/bottomLayout"
    android:visibility="gone"
    android:animateLayoutChanges="true"
    tools:showIn="@layout/activity_home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/profileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PERSONAL INFORMATION"
                android:textColor="#747474"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:background="@drawable/box"
                android:drawableLeft="@drawable/personal"
                android:drawableRight="@drawable/extand"
                android:gravity="left|center_vertical"
                android:padding="15dp"
                />
            <Button
                android:id="@+id/serviceSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SERVICES AND SKILLS"
                android:layout_marginTop="10dp"
                android:textColor="#747474"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:background="@drawable/box"
                android:drawableLeft="@drawable/services"
                android:drawableRight="@drawable/extand"
                android:gravity="left|center_vertical"
                android:padding="15dp"
                />
            <Button
                android:id="@+id/material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUPPORTING MATERIAL"
                android:layout_marginTop="10dp"
                android:textColor="#747474"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:background="@drawable/box"
                android:drawableLeft="@drawable/supporting"
                android:drawableRight="@drawable/extand"
                android:gravity="left|center_vertical"
                android:padding="15dp"
                />
            <Button
                android:id="@+id/kycDoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KYC DOCUMENTS"
                android:layout_marginTop="10dp"
                android:textColor="#747474"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:background="@drawable/box"
                android:drawableLeft="@drawable/document"
                android:drawableRight="@drawable/extand"
                android:gravity="left|center_vertical"
                android:padding="15dp"
                />
            <Button
                android:id="@+id/vehicleDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VEHICLE DETAILS"
                android:layout_marginTop="10dp"
                android:textColor="#747474"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:background="@drawable/box"
                android:drawableLeft="@drawable/vehicle"
                android:drawableRight="@drawable/extand"
                android:gravity="left|center_vertical"
                android:padding="15dp"
                />
            <Button
                android:id="@+id/bankDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BANK DETAILS"
                android:layout_marginTop="10dp"
                android:textColor="#747474"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:background="@drawable/box"
                android:drawableLeft="@drawable/bank_detail"
                android:drawableRight="@drawable/extand"
                android:gravity="left|center_vertical"
                android:padding="15dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>