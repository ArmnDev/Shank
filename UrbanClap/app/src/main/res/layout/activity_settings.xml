<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp"
    tools:context="com.mobiquel.shank.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_background_blue"
            android:padding="10dp"
            android:text="LOG OUT"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/companyCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPANY CODE: "
        android:layout_marginRight="5dp"
        android:textColor="#000000"
        android:textSize="16sp" />



    <LinearLayout
        android:layout_below="@id/companyCode"
        android:id="@+id/leaveJoinLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/joinCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_background_blue"
            android:text="Join Company"
            android:visibility="gone"

            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />
        <LinearLayout
            android:id="@+id/leaveLayout"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:text="COMPANY CODE: "
            android:visibility="invisible"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            android:textSize="16sp" />
        <Button
            android:id="@+id/leave"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="LEAVE"
            android:layout_marginLeft="5dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rectangle_background_blue"
            />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/inviteCode"
        android:layout_width="match_parent"
        android:layout_below="@id/leaveJoinLayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="INVITE CODE: "
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inviteCode"
        android:layout_marginTop="10dp"

        android:text="MOBILE: "
        android:textColor="#000000"
        android:textSize="16sp" />
    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
        android:id="@+id/progressBar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:background="#EF3B3B"
        android:visibility="gone" />
</RelativeLayout>
