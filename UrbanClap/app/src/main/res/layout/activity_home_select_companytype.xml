<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.mobiquel.shank.SplashActivity">


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/iAcceptTerms"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/termsAndConditions"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:text=""
                android:gravity="center"

                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:enabled="false"
            android:background="@drawable/rectangle_background_disabled"
            android:gravity="center_horizontal|center_vertical"
            android:text="NEXT"
            android:textColor="#FFFFFF" />


    </LinearLayout>


    <ListView
        android:id="@+id/companyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomLayout"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:listSelector="@android:color/transparent" />
    <LinearLayout
        android:id="@+id/topChkBoxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomLayout"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/box"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/compType1"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="1. SERVICE CENTER/ FRANCHISE/ DEALER"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.2">
                    <CheckBox
                        android:id="@+id/chkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_button_custom"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/compType2"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="2. LABOR CONTRACTOR/ SERVICE DEALER"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.2">
                    <CheckBox
                        android:id="@+id/chkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_button_custom"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:id="@+id/compType3"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="3. MATERIAL/ SPARES SUPPLIERS"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.2">
                    <CheckBox
                        android:id="@+id/chkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_button_custom"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/box"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/compType4"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="4. HR COMPANIES"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.2">
                <CheckBox
                    android:id="@+id/chkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_button_custom"
                    />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>




    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
        android:id="@+id/progressBar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:background="#EF3B3B"
        android:visibility="gone" />
</RelativeLayout>
