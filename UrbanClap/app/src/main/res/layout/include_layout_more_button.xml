<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/moreLayout"
    android:visibility="gone"
    android:layout_below="@id/topLayout"
    android:layout_above="@id/bottomLayout"
    tools:showIn="@layout/activity_home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/giveLeadEarn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="GIVE LEAD AND EARN"
                android:visibility="gone"
                android:background="@drawable/rectangle_background_2"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/shareReferralCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:text="SHARE YOUR REFERRAL CODE"
                android:background="@drawable/rectangle_background_2"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/howItWorks"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOW IT WORKS"
                android:background="@drawable/rectangle_background_2"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/termOfUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:text="TERM OF USE"
                android:background="@drawable/rectangle_background_2"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/contactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTACT US"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:background="@drawable/rectangle_background_2"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/rateApp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RATE APP"
                android:visibility="gone"
                android:background="@drawable/rectangle_background_2"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/downloadUserApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textColor="#000000"
                android:text="DOWNLOAD USER APP"
                android:background="@drawable/rectangle_background_2"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/referTechnician"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invite Company/Technician"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"

                android:textColor="#000000"
                android:background="@drawable/rectangle_background_2"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/settingsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:background="@drawable/rectangle_background_2"
                android:padding="10dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>