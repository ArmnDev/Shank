<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/technicianName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technician 1"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/technicianMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technician 1"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/code"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:hint="Enter Code"
                    android:inputType="number"
                    android:visibility="invisible"
                    android:singleLine="true"
                    android:focusableInTouchMode="false"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:background="@drawable/rectangle_background_2"
                    android:padding="10dp" />
            <Button
                android:id="@+id/verifyCode"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:singleLine="true"
                android:text="Verify"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rectangle_background_blue"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:hint="Enter Code"
                    android:inputType="number"
                    android:singleLine="true"
                    android:focusableInTouchMode="false"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:background="@drawable/rectangle_background_2"
                    android:padding="10dp" />
            <Button
                android:id="@+id/sendCode"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:singleLine="true"
                android:text="Re-send"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rectangle_background_blue"
                />
                </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:singleLine="true"
            android:text="Verify"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/pendingForApproval"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:visibility="gone"
            android:singleLine="true"
            android:text="Verify"
            android:textColor="#FFFFFF"
            android:background="@drawable/rectangle_background_blue"
            />

    </LinearLayout>

</RelativeLayout>